<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    tools:context=".actividades.ActivityIngresarProductos">


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/principal"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INGRESO DE PRODUCTOS"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/ic_launcher_background"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/etCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Código"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/etDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Detalle o descripción"
        android:layout_marginTop="7dp"/>

    <EditText
        android:id="@+id/etCantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad de ingreso"
        android:layout_marginTop="7dp"
        android:inputType="number"/>


    <EditText
        android:id="@+id/etValor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Valor unitario"
        android:layout_marginTop="7dp"
        android:inputType="numberDecimal" />


    <EditText
        android:id="@+id/etProveedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Proveedor"
        android:layout_marginTop="7dp"
        android:inputType="text" />



    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:text="REGISTRAR"
        android:textSize="22sp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:fontFamily="sans-serif-black"
        app:cornerRadius="30dp"
        android:backgroundTint="@color/ic_launcher_background"
        android:onClick="onClick"/>



</LinearLayout>